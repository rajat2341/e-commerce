 <div class="card-deck" id="data">
     <div class="container-fluid">
         <% for(var j = 0;j < collection.length;j++) { %>
            <div class="row">
                <div class="col-sm-3 col-md-6 col-lg-4 coln" style="padding:20px;">
                    <div class="card" style="height: 500px">
                        <div class="container" style="width: 250px; background-color: #607d8b;">
                            <div id="myCarousela<%=j%>" class="carousel slide" data-ride="carousel">
                                <!-- Indicators -->
                                <ol id="b<%=j%>" class="carousel-indicators">
                                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="1"></li>
                                    <li data-target="#myCarousel" data-slide-to="2"></li>
                                </ol>

                                <!-- Wrapper for slides -->
                                <div id="c<%=j%>" class="carousel-inner">
                                    <% for(var i = 0;i < collection[j].avatar.length;i++){ %>
                                        <% if(i == 0){%>
                                            <div id="d<%=j%>" class="item active">
                                                    <img src="uploads/<%= collection[j].avatar[i] %>" style="width:100%;">
                                            </div>
                                        <% } else {%>
                                            <div id="d<%=j%>" class="item">
                                                <img src="uploads/<%= collection[j].avatar[i] %>" style="width:100%;">
                                            </div>
                                        <% } %>
                                    <% } %>
                                </div>

                                <!-- Left and right controls -->
                                <a id="myCarousela<%=j%>" class="left carousel-control" href="#myCarousel" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a id="myCarousela<%=j%>" class="right carousel-control" href="#myCarousel" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>



                        <div style="width: 250px;">
                            <p>
                                <h4><strong><%=collection[j].name%></strong></h4>
                                <input type="number" id="quant<%=collection[j]._id%>" class="quantity" placeholder="Quantity" name="quantity"/>

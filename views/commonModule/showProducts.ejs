                                        <!--var inputValue = $(this).val();-->
                                        <!--if(inputValue > max){-->
                                            <!--alert('greater!');-->

                                            <!--$(this).val('')-->
                                        <!--}-->
                                    <!--});-->
                                <!--</script>-->
                            </p>
                            <p>
                                Price: <h5><strong><%=collection[j].price%></strong></h5>
                            </p>
                            <p>
                                <%=collection[j].description%>
                            </p>
                            <a href="#" id="<%=collection[j]._id%>" class="btn btn-primary atcbt"> AddToCart </a>
                        </div>
                    </div>
                </div>
            <% } %>
         </div>
     </div>
 </div>

